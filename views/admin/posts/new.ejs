<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>

<h1 class="mt-4">Create post</h1>
<hr>
<form action="/admin/posts/new" method="POST">
    <div class="card">
        <div class="card-body">
            <label for="title">Title:</label>
            <input type="text" name="title" maxlength="255" class="form-control" placeholder="Title" required>

            <label for="description">Description:</label>
            <input type="text" name="description" maxlength="255" class="form-control" placeholder="Description" required>

            <label for="category">Category:</label>
            <select name="category" class="form-control" required>
                <option value="0">Select a category</option>

                <% if (categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.category %></option>
                    <% }); %>
                <% } else { %>
                    <option value="0">No categories available.</option>
                <% } %>
            </select>

            <label for="post">Post:</label>
            <textarea name="post" id="post" class="form-control" placeholder="Your post here..."></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-success mt-2">Create post</button>
</form>
<a href="/admin/posts/all" class="btn btn-outline-secondary mt-2">Back</a>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#post",
        plugins: ["advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons"]
    })
</script>

