<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
<%- include("../../partials/flash.ejs") %>

<h1>Delete post</h1>
<span>Are you sure you want to delete this post? This is an irreversible action.</span>
<hr>
<form action="/admin/posts/delete" method="POST">
    <div class="card">
        <div class="card-header">
            <h2 style="font-size: 28px;">Info</h2>
        </div>
        <div class="card-body">
            <span>Post title: <%= post.title %></span> <br>
            <span>Description: <%= post.description %></span>
            <span>Author: <%= post.author %></span>
            <hr>
            <input type="hidden" name="id" value="<%= post.id %>" readonly>

            <button type="submit" class="btn btn-outline-danger">Delete post</button> <br>
            <a class="btn btn-outline-secondary mt-2" href="/admin/posts/all">Back</a>
        </div>
        <div class="card-footer">
            <small>
                Created on <%= dateFormatter(post.createdAt) %> at <%= hourFormatter(post.createdAt) %>
                <% if (post.createdAt.getTime() !== post.updatedAt.getTime()) { %>
                    <br> Last updated on <%= dateFormatter(post.updatedAt) %> at <%= hourFormatter(post.updatedAt) %>
                <% } %>
            </small>
        </div>
    </div>
</form>


