<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
<%- include("../../partials/flash.ejs") %>

<h1>Delete category</h1>
<span>Are you sure you want to delete this category? This is an irreversible action.</span>
<hr>
<form action="/admin/categories/delete" method="POST">
    <div class="card">
        <div class="card-header">
            <h2 style="font-size: 28px;">Info</h2>
        </div>
        <div class="card-body">
            <span>Category name: <%= category.category %></span> <br>
            <span>Author: <%= category.author %></span>
            <hr>
            <input type="hidden" name="id" value="<%= category.id %>" readonly>

            <button type="submit" class="btn btn-outline-danger">Delete category</button> <br>
            <a class="btn btn-outline-secondary mt-2" href="/admin/categories/all">Back</a>
        </div>
        <div class="card-footer">
            <small>
                Created on <%= dateFormatter(category.createdAt) %> at <%= hourFormatter(category.createdAt) %>
                <% if (category.createdAt.getTime() !== category.updatedAt.getTime()) { %>
                    <br> Last updated on <%= dateFormatter(category.updatedAt) %> at <%= hourFormatter(category.updatedAt) %>
                <% } %>
            </small>
        </div>
    </div>
</form>

